{% extends 'base.html.twig' %}
{% block title %}Contact Us{% endblock %}

{% block stylesheets %}


{% endblock %}

{% block body %}



    <div class="row">
        <div class="col-sm-12">
            <div class="contact-map">
                <div class="property-card">
                    <div class="property-image"
                         style="background: url('{{ asset('resources/images/contact.png') }}') center center / cover no-repeat;">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row ">
        <div class="col-md-12">
            {% if app.session.flashBag.has('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                    <i class="mdi mdi-check-all"></i>
                    {% for message in app.flashes('success') %}
                        {{ message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

    </div>
    <div class="property-card bg-white">
        <div class="property-content">
            <div class="row justify-content-center m-t-50 p-b-10 m-b-30">
                <div class="col-md-10">
                    <div class="row m-b-20">
                        <div class="col-sm-12">
                            <h3 class="title">Send us a Message</h3>
                            <p class="text-muted sub-title">Your comments and ideas are greatly appreciated.</p>
                        </div>
                    </div>

                    <div class="row">

                        <!-- Contact form -->
                        <div class="col-sm-6">

                            {{ form_start(form) }}
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ form_widget(form.FirstName,{'attr': {'placeholder': 'First Name'}}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.LastName, {'attr': {'placeholder': 'Last Name'}}) }}
                                    </div>
                                </div>

                            </div>

                            <div class="form-group">
                                {{ form_widget(form.LastName, {'attr': {'placeholder': 'Last Name'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.email, {'attr': {'placeholder': 'Email'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.subject, {'attr': {'placeholder': 'Subject'}}) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.message, {'attr': {'placeholder': 'Message'}}) }}
                            </div>

                            <div class="form-group">
                                {% form_theme form '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}
                                {{ form_errors(form.recaptcha) }}
                                {{ form_widget(form.recaptcha) }}
                            </div>


                            {{ form_end(form) }}

                        </div> <!-- end col -->

                        <div class="col-sm-4 offset-sm-1">
                            <div class="contact-box">

                                <div class="contact-detail">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <address>
                                        <h5>Regional Activity Centre for Specially Protected Areas (SPA/RAC)</h5><br>
                                        Boulevard du Leader Yasser Arafat B.P. 337 - 1080 Tunis Cedex - La Charguia <br>
                                        Tunis, Tunisia
                                    </address>
                                </div>

                                <div class="contact-detail">
                                    <i class="fas fa-phone"></i>
                                    <p>
                                        (+216) 71 206 649/485/851/765
                                    </p>
                                </div>

                                <div class="contact-detail">
                                    <i class="fas fa-envelope"></i>
                                    <p>
                                        <a href="mailto:admin@mamias.org">admin@mamias.org</a>
                                    </p>
                                </div>

                            </div>
                        </div> <!-- end col -->
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    </div>
    {% block javascripts %}

    {% endblock %}

{% endblock %}
