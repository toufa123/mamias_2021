{% extends 'secure.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Password Reset{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-xl-5"><img class="bg-img-cover bg-center" src="{{ asset('resources/images/forget.jpg') }}"
                                   alt="Login page"></div>
        <div class="col-xl-7 p-0">
            <div class="login-card">
                <div class="col-sm-12">
                    <div class="card-body">
                        <form class="theme-form login-form b-primary" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                            <div class="form-group">

                                <label class="col-form-label pt-0" for="username">{{ 'resetting.request.username'|trans }}</label>
                                <input class="form-control b-primary" type="text" id="username" name="username"
                                       required="required"/>
                            </div>
                            <div class="form-group">
                                <button
                                    class="btn btn-block w-md btn-bordered btn-primary waves-effect waves-light m-t-10">{{ 'resetting.request.submit'|trans }}</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}
