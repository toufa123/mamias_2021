{% extends 'secure.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Reset Password{% endblock %}
{% block body %}

    <div class="row">

        <div class="col-xl-5"><img class="bg-img-cover bg-center" src="{{ asset('resources/images/forget.jpg') }}"
                                   alt="Login page"></div>
        <div class="col-xl-7 p-0">
            <div class="login-card">
                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'theme-form login-form' } }) }}
                <div class="form-group">
                 {{ form_widget(form) }}
                </div>
                <div class="form-group">
                    <button
                        class="btn btn-block w-md btn-bordered btn-primary waves-effect waves-light m-t-10">{{ 'resetting.reset.submit'|trans }}</button>
                </div>



        </div>
    </div>



{% endblock %}
